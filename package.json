{
  "name": "repatch-devtools-extension",
  "version": "0.0.1",
  "description": "Chrome extension for repatch-devtools",
  "main": "lib/extension/index.js",
  "typings": "lib/extension/index",
  "scripts": {
    "build": "rm -rf lib && node_modules/.bin/tsc -p src/extension --outDir lib/extension",
    "build:w": "node_modules/.bin/tsc -w -p src/extension --outDir lib/extension",
    "build-tests": "rm -rf lib && node_modules/.bin/tsc -p src/test --outDir lib",
    "build-tests:w": "node_modules/.bin/tsc -w -p src/test --outDir lib",
    "pretest": "npm run build-tests",
    "test": "node_modules/.bin/mocha lib/test/**/*.spec.js -c",
    "start": "node ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaystack/repatch-devtools-extension.git"
  },
  "keywords": [
    "repatch",
    "devtool",
    "extension"
  ],
  "author": "JayStack",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaystack/repatch-devtools-extension/issues"
  },
  "homepage": "https://github.com/jaystack/repatch-devtools-extension#readme",
  "devDependencies": {
    "@types/deep-diff": "0.0.31",
    "@types/node": "^8.0.24",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "deep-diff": "^0.3.8"
  }
}
